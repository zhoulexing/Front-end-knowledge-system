{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "target": "es5",
        "jsx": "react",
        "module": "es6",
        "lib": ["es6", "es7", "dom"],  // 指定要包含在编译中的库文件
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "declaration": false
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}