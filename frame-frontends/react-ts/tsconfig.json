{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "strictNullChecks": true,
        "strict": true,
        "outDir": "dist",
        "lib": ["esnext", "dom"],
        
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": [
        "dist", 
        "node_modules"
    ],
    "include": ["src"]
}
