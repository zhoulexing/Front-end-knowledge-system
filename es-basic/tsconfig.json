{
    "compilerOptions": {
        "outDir": "./dist/typescript", // 输出目录
        "target": "es5", // 编译为es5
        "allowJs": true, // 允许编辑js文件
        "module": "es6", // 制定使用模块
        "moduleResolution": "node", // 模块解析策略
        "strict": true // 严格模式
    },
    "include": ["./typescript"], // 指定目录
    // "files": [] // 指定文件
}